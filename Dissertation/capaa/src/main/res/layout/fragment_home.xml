<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to CAPAA"
        android:textSize="40sp"
        android:gravity="top"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/WelcomeLabel"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPAA lets you track your steps and purchase items for your avatar. "
        android:layout_below="@+id/WelcomeLabel"
        android:textSize="30sp"
        android:gravity="top"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/CAPAAtext"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate the menus below to purchase items and view your avatar!"
        android:layout_below="@+id/CAPAAtext"
        android:textSize="30sp"
        android:gravity="top"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/CAPAAtext1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StepCounter"
        android:textSize="30dp"
        android:gravity=""
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalSteps"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_centerInParent="true"
        android:layout_below="@+id/StepCounter"
        />

</RelativeLayout>